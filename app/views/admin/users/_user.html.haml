%tr
  %td= user.id
  %td= user.email
  %td= user.roles.map { |e| e.name }
  %td= user.current_sign_in_at
  %td= user.current_sign_in_ip
  %td= user.last_sign_in_at
  %td= user.last_sign_in_ip
  %td= user.sign_in_count
  %td
    = link_to "Edit" , edit_admin_user_path(user), class: "ui teal button"
    = link_to "Delete", [:admin, user], method: :delete, data: { confirm: "Are you sure?" }, class: "ui red button"
