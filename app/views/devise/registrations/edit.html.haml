.ui.grid.container.centered
  .six.wide.computer.sixteen.wide.tablet.sixteen.wide.mobile.column
    = render partial: "layouts/shared/notice" if notice.present?
    = render partial: "layouts/shared/alert" if alert.present?
    = render partial: "layouts/shared/form_error", locals: { object: resource }
    = image_tag "logo.svg", class: "ui centered small image"
    .ui.horizontal.divider
      Edit #{resource_name.to_s.humanize}
    .ui.huge.form
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui large form"}) do |f|
        .ui.stacked.segment
          .field
            .ui.left.icon.input
              %i.user.icon
              = f.email_field :email, autofocus: true, placeholder: "Email"
          .field
            .ui.left.icon.input
              %i.user.icon
              = f.password_field :password, autocomplete: "off", placeholder: "New password"
          .field
            .ui.left.icon.input
              %i.user.icon
              = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmation password"
          .field
            .ui.left.icon.input
              = f.password_field :current_password, autocomplete: "off", placeholder: "Confirmation password"
          .field
            .ui.left.icon.input
              %i.user.icon
              = f.text_field :username, autocomplete: "off", placeholder: "Username"
          .field
            .ui.left.icon.input
              %i.user.icon
              = f.text_field :nickname, autocomplete: "off", placeholder: "Nickname"
        = f.submit "Update", class: "ui fluid large teal submit button"
        .ui.section.divide